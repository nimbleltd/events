<h1><%= pluralize(@events.size, 'Event')%></h1>

  <% @events.each do |event| %>
    <article>
      <header>
        <h2><%= link_to(event.name, event) %></h2>
      </header>
      <table>
      <tr>
        <th>When:</th>
        <td><%= event.starts_at.strftime("%A, %b %d at %I:%M %p") %></td>
      </tr>
      <tr>
        <th>Where:</th>
        <td><%= event.location %></td>
      </tr>
      <tr>
        <th>Price:</th>
        <td><strong><%= number_to_currency(@events.first.price)%></strong></td>
      </tr>
    </table>
    </article>
  <% end %>