<%= form_for(@event) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %><br><br>

    <%= f.label :starts_at %><br>
    <%= f.datetime_select :starts_at %><br><br>

    <%= f.label :description %><br>
    <%= f.text_area :description, cols:40, rows:7 %><br><br>

    <%= f.label :location %><br>
    <%= f.text_field :location %><br><br>

    <%= f.label :price %><br>
    <%= f.number_field :price %><br><br>

    <%= f.label :image_file_name %><br>
    <%= f.text_field :image_file_name, size: 30,
        placeholder: "GIF, JPG, or PNG files"
     %><br><br>

    <%= f.label :capacity %><br>
    <%= f.number_field :capacity %><br><br>

    <%= f.submit %> | <%= link_to 'Cancel', events_path %><br><br>

  </p>
<% end %>