<h1>Edit Event: <%= @event.name %></h1>

<%= form_for(@event) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.label :starts_at %><br>
    <%= f.datetime_select :starts_at %><br><br>

    <%= f.label :description %><br>
    <%= f.text_area :description, cols:40, rows:7 %><br><br>

    <%= f.label :location %><br>
    <%= f.text_field :location %><br><br>

    <%= f.label :price %><br>
    <%= f.number_field :price %><br><br>

    <%= f.submit %><br><br>

  </p>
<% end %>





<article>
  <header>
    <h2></h2>
  </header>
   <p> 
    <%= @event.description %> 
  </p>
  <table>
    <tr>
      <th>When:</th>
      <td><%= @event.starts_at %></td>
    </tr>
    <tr>
      <th>Where:</th>
      <td><%= @event.location %></td>
    </tr>
    <tr>
      <th>Price:</th>
      <td><strong><%= format_price(@event) %></strong></td>
    </tr>
  </table>
  <p>
    <%= link_to "All Events", root_path%>
  </p>  
  <p>
    <%= link_to "Edit", edit_event_path(@event)%>
  </p>
</article>
