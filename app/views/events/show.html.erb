<h1>Events</h1>

<article>
  <header>
    <h2><%= @event.name %></h2>
  </header>
  <p> 
    <%= @event.description %> 
  </p>
  <table>
    <tr>
      <th>When:</th>
      <td><%= @event.starts_at %></td>
    </tr>
    <tr>
      <th>Where:</th>
      <td><%= @event.location %></td>
    </tr>
    <tr>
      <th>Price:</th>
      <td><strong><%= format_price(@event) %></strong></td>
    </tr>
  </table>
    <p>
      <%= link_to "Back to All Events", root_path%>
    </p>
    <p>
      <%= link_to "Edit Event", edit_event_path%>
    </p>
</article>