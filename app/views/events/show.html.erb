    <h2><%= @event.name %></h2>
  </header>
  <p> 
    <%= @event.description %> 
  </p>
  <h3>When</h3>
  <p>
    <%= @event.starts_at %>
  </p>
  <p>
  <h3>When</h3>
    <%= @event.location %> 
